<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hms.myhospital.appointmentRowController">
   <children>
      <AnchorPane prefHeight="50.0" prefWidth="680.0">
         <children>
            <Rectangle fill="#4059ad" height="50.0" stroke="BLACK" strokeType="INSIDE" width="150.0" />
            <Rectangle fill="#f4b942" height="50.0" layoutX="150.0" stroke="BLACK" strokeType="INSIDE" width="150.0" />
            <Rectangle fill="#4059ad" height="50.0" layoutX="350.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
            <Label fx:id="patientName" layoutX="39.0" layoutY="16.0" text="Patient Name" textFill="WHITE" />
            <Rectangle fill="#f4b942" height="50.0" layoutX="450.0" stroke="BLACK" strokeType="INSIDE" width="230.0" />
            <Rectangle fill="#4059ad" height="50.0" layoutX="300.0" stroke="BLACK" strokeType="INSIDE" width="150.0" />
            <Label fx:id="appointmentTime" layoutX="362.0" layoutY="16.0" text="Time" textFill="WHITE" />
            <Label fx:id="appointmentDate" layoutX="212.0" layoutY="16.0" text="Date" />
            <AnchorPane layoutX="450.0" layoutY="12.0">
               <children>
                  <HBox spacing="12.5">
                     <children>
                        <Button fx:id="confirmAppointmentBtn" mnemonicParsing="false" prefWidth="60.0" text="Confirm" />
                        <Button fx:id="viewPatientBtn" mnemonicParsing="false" prefWidth="60.0" text="View" />
                        <Button fx:id="cancelAppointmentBtn" mnemonicParsing="false" prefWidth="60.0" text="Cancel" />
                     </children>
                     <padding>
                        <Insets left="12.5" />
                     </padding>
                  </HBox>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</HBox>
